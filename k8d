#!/bin/bash
set -eo pipefail

SCRIPT=$(dirname $0)

TYPE=$(cat $SCRIPT/type.mem)
NAMESPACE=$(cat $SCRIPT/namespace.mem)
INDEX=$1
INDEX=$((INDEX+1))

ID=$(cat $SCRIPT/output.mem | sed -n "$INDEX"p | awk '{print $1}')

echo kubectl describe $TYPE $ID -n $NAMESPACE ${@:2}
kubectl describe $TYPE $ID -n $NAMESPACE ${@:2}
